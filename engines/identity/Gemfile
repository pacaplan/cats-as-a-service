source "https://rubygems.org"

# Specify your gem's dependencies in identity.gemspec.
gemspec

# Load shared rampart version from monorepo root
require File.expand_path("../../../config/rampart_version.rb", __dir__) if File.exist?(File.expand_path("../../../config/rampart_version.rb", __dir__))
RAMPART_VERSION ||= ">= 0"

gem "rampart-core", RAMPART_VERSION

gem "puma"

gem "pg"

gem "sprockets-rails"

# Omakase Ruby styling [https://github.com/rails/rubocop-rails-omakase/]
gem "rubocop-rails-omakase", require: false

# Start debugger with binding.b [https://github.com/ruby/debug]
# gem "debug", ">= 1.0.0"

group :development, :test do
  gem "standard", ">= 1.35.1", require: false
  gem "rspec-rails", "~> 8.0"
end
