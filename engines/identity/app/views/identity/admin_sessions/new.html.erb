<h1>Admin Sign In</h1>

<% if @error %>
  <div class="alert alert-error">
    <%= @error %>
  </div>
<% end %>

<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<%= form_with url: admin_sign_in_path, method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, name: "admin[username]", autofocus: true, autocomplete: "username" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, name: "admin[password]", autocomplete: "current-password" %>
  </div>

  <button type="submit">Sign In</button>
<% end %>
